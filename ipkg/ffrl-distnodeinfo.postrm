#!/bin/sh
# post-removal script.

echo "+ removing distnodeinfo from crontab"
sed \
  -e "/distnodeinfo/d" \
  -i "${IPKG_INSTROOT}/etc/crontabs/root"

if [ -z "${IPKG_INSTROOT}" ]; then
  echo "+ restarting cron"
  /etc/init.d/cron restart
fi

[ -L "${IPKG_INSTROOT}/usr/sbin/p2ptbl-recv" ] && {
echo "+ remove link to /sbin/p2ptbl-recv"
rm "${IPKG_INSTROOT}/sbin/p2ptbl-recv"
}

